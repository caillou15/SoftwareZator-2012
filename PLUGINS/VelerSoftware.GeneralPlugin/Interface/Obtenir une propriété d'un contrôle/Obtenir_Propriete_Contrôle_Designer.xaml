<sap:ActivityDesigner x:Class="Obtenir_Propriete_Contrôle_Designer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation"
    xmlns:sapv="clr-namespace:System.Activities.Presentation.View;assembly=System.Activities.Presentation" mc:Ignorable="d" d:DesignHeight="112">
    <sap:ActivityDesigner.Resources>
        <ResourceDictionary>

            <Style x:Key="CollapsedStyle" TargetType="{x:Type Grid}">
                <Setter Property="Visibility" Value="Visible"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=ShowExpanded}" Value="true">
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="ExpandedStyle" TargetType="{x:Type Grid}">
                <Setter Property="Visibility" Value="Collapsed"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=ShowExpanded}" Value="true">
                        <Setter Property="Visibility" Value="Visible"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>


            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/VelerSoftware.GeneralPlugin;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </sap:ActivityDesigner.Resources>
    <sap:ActivityDesigner.Icon>
        <DrawingBrush>
            <DrawingBrush.Drawing>
                <ImageDrawing>
                    <ImageDrawing.Rect>
                        <Rect Location="0,0" Size="16,16" ></Rect>
                    </ImageDrawing.Rect>
                    <ImageDrawing.ImageSource>
                        <BitmapImage UriSource="pack://application:,,,/VelerSoftware.GeneralPlugin;component/Resources/obtenir_propriété_controle.png" ></BitmapImage>
                    </ImageDrawing.ImageSource>
                </ImageDrawing>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </sap:ActivityDesigner.Icon>

    <Grid>
        <Grid Style="{DynamicResource CollapsedStyle}">
            <TextBlock Name="TextBlock1" Style="{StaticResource CommentStyle}" Text="Double-cliquer pour afficher"></TextBlock>
        </Grid>

        <Grid Style="{DynamicResource ExpandedStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="100*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Content="Contrôle :" Width="Auto" Height="Auto" HorizontalAlignment="Stretch" Name="Label1" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Padding="0" Margin="0,3,0,3" />
            <ComboBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding Path=ModelItem.Param1}" Name="ComboBox1" Grid.Column="1"></ComboBox>

            <Label Content="Propriété :" Width="Auto" Height="Auto" HorizontalAlignment="Stretch" Name="Label3" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Padding="0" Margin="0,3,0,3" />
            <ComboBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding Path=ModelItem.Param2}" Name="ComboBox3" Grid.Row="2" Grid.Column="1" Margin="0,2,0,0"></ComboBox>

            <Label Content="Résultat :" Width="Auto" Height="Auto" HorizontalAlignment="Stretch" Name="Label4" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0" Padding="0" Margin="0,3,0,3" />
            <ComboBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding Path=ModelItem.Param3}" Name="ComboBox4" Grid.Row="3" Grid.Column="1" Margin="0,2,0,0"></ComboBox>
        </Grid>
    </Grid>
</sap:ActivityDesigner>