<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:editing="clr-namespace:VelerSoftware.SZC35.Editing"
>
	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="/VelerSoftware.SZC35;component/TextEditor.xaml" />
	</ResourceDictionary.MergedDictionaries>
	
	<Style TargetType="{x:Type editing:LineNumberMargin}">
		<Setter Property="TextBlock.Foreground" Value="Gray"/>
		<Setter Property="Control.Cursor" Value="/VelerSoftware.SZC35;component/themes/RightArrow.cur"/>
	</Style>
</ResourceDictionary>
